# Nutrition Intelligence Platform - Environment Variables

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nutrition_intelligence
DATABASE_ECHO=false

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# IMPORTANT: Change this in production! Must be at least 32 characters
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-chars-long
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30
ALGORITHM=HS256

# =============================================================================
# API CONFIGURATION
# =============================================================================
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Google Cloud Storage
GCS_BUCKET=nutrition-intelligence-storage
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json

# SendGrid Email Service
SENDGRID_API_KEY=your-sendgrid-api-key-here

# SMTP Configuration (alternative to SendGrid)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# =============================================================================
# AI SERVICES (Placeholders)
# =============================================================================
# OpenAI API (for future implementation)
OPENAI_API_KEY=your-openai-api-key-here

# Google Vision API
AI_VISION_API_KEY=your-vision-api-key-here

# Custom AI Service Endpoints
AI_NLP_API_KEY=your-nlp-api-key-here
AI_RECOMMENDATION_ENDPOINT=https://your-ai-service.com/api

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# COMPLIANCE & AUDIT
# =============================================================================
DATA_RETENTION_DAYS=2555
AUDIT_LOG_ENABLED=true

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Sentry for error tracking
SENTRY_DSN=your-sentry-dsn-here

# OpenTelemetry
OTEL_EXPORTER_ENDPOINT=http://localhost:4317

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# MinIO (local S3-compatible storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=password123
MINIO_SECURE=false

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_ENV=development

# Expo Configuration
EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0
REACT_NATIVE_PACKAGER_HOSTNAME=localhost

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =============================================================================
# SOCIAL AUTH (Future Implementation)
# =============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# =============================================================================
# MEXICO-SPECIFIC CONFIGURATION
# =============================================================================
# SMS Provider for Mexican numbers
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Mexican nutritionist verification APIs
NUTRITIONIST_VERIFICATION_API=https://api.dgp.salud.gob.mx/verify
NUTRITIONIST_API_KEY=your-verification-api-key

# =============================================================================
# REGIONAL SETTINGS
# =============================================================================
DEFAULT_TIMEZONE=America/Mexico_City
DEFAULT_LANGUAGE=es
DEFAULT_CURRENCY=MXN
SUPPORTED_LANGUAGES=es,en

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_AI_FEATURES=true
ENABLE_SOCIAL_FEATURES=false
ENABLE_PAYMENTS=false
ENABLE_TELEMEDICINE=false
ENABLE_RESEARCH_DATA=true